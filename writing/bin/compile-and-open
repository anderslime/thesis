#!/usr/bin/env bash
function compile_latex {
  terminal-notifier -title 'Compiling your LaTeX' -message '🤓 🚀 '""
  pdflatex -shell-escape -halt-on-error -interaction nonstopmode thesis.tex
  local latexstatus=$?
  if [ $latexstatus -eq 0 ]; then
    open thesis.pdf
  else
    terminal-notifier -title 'Error on LaTeX compilation!' -message 'Your document was not compiled ‼️ 🙃 '""
  fi
}
compile_latex
